---
import { Image } from "astro:assets";
import { getI18N } from "../i18n/";

const { currentLocale } = Astro;

const i18n = getI18N({ currentLocale });
---

<section
  class="flex flex-col justify-center max-w-[80ch] mx-auto text-pretty p-5 items-center gap-y-5"
>
  <Image
    class="rounded-full"
    src="/logo.webp"
    alt="Logo Holkan evento deportivo de calistenia"
    width={400}
    height={400}
    loading={"lazy"}
  />
  <h1 class="tracking-wide text-5xl font-bold text-wrap">
    {i18n.INTRO_TITLE}
    <h1>
      <p set:html={i18n.INTRO_DESCRIPTION1} />
      <p set:html={i18n.INTRO_DESCRIPTION2} />
      <p set:html={i18n.INTRO_DESCRIPTION3} />
    </h1>
  </h1>
</section>
